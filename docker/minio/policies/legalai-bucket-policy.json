{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "LegalAIDocumentAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": ["arn:aws:iam::*:user/legalai-service"]
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:GetObjectVersion",
        "s3:PutObjectAcl",
        "s3:GetObjectAcl"
      ],
      "Resource": [
        "arn:aws:s3:::legal-documents/*",
        "arn:aws:s3:::legal-contracts/*",
        "arn:aws:s3:::legal-case-files/*"
      ]
    },
    {
      "Sid": "LegalAIBucketManagement",
      "Effect": "Allow",
      "Principal": {
        "AWS": ["arn:aws:iam::*:user/legalai-service"]
      },
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:ListBucketMultipartUploads",
        "s3:ListBucketVersions"
      ],
      "Resource": [
        "arn:aws:s3:::legal-documents",
        "arn:aws:s3:::legal-contracts",
        "arn:aws:s3:::legal-case-files"
      ]
    },
    {
      "Sid": "LegalAIMultipartUpload",
      "Effect": "Allow",
      "Principal": {
        "AWS": ["arn:aws:iam::*:user/legalai-service"]
      },
      "Action": [
        "s3:AbortMultipartUpload",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": [
        "arn:aws:s3:::legal-documents/*",
        "arn:aws:s3:::legal-contracts/*",
        "arn:aws:s3:::legal-case-files/*"
      ]
    },
    {
      "Sid": "DenyPublicAccess",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::legal-documents",
        "arn:aws:s3:::legal-documents/*",
        "arn:aws:s3:::legal-contracts",
        "arn:aws:s3:::legal-contracts/*",
        "arn:aws:s3:::legal-case-files",
        "arn:aws:s3:::legal-case-files/*"
      ],
      "Condition": {
        "StringNotEquals": {
          "aws:PrincipalServiceName": ["legalai.service"]
        }
      }
    }
  ]
}